---
interface Props {
  phase_version_II: string | undefined;
}

const { phase_version_II } = Astro.props;
---

<div
  class="group relative glass-panel rounded-2xl overflow-hidden hover:border-gold transition-all duration-500"
>
  <div class="h-48 overflow-hidden">
    <img
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700"
      data-alt="Mualani and Kinich character banner artwork"
      src="https://img.game8.co/4382646/a1f61a23ca2ea06399f882fa9c5cbf3a.png/show"
    />
  </div>
  <div class="p-5">
    <div class="flex justify-between items-start mb-2">
      <h3 class="text-white font-bold text-lg">Current Banners</h3>
      <span
        class="bg-primary/20 text-primary text-[10px] px-2 py-0.5 rounded-full font-bold"
        >LIMITED</span
      >
    </div>
    <p class="text-slate-400 text-xs mb-4">Phase 2: {phase_version_II}</p>
    <div class="w-full bg-white/5 h-1.5 rounded-full mb-2">
      <div class="bg-primary h-1.5 rounded-full w-[15%]"></div>
    </div>
    <div class="flex justify-between text-[10px] font-bold text-gold uppercase">
      <span>14 Days Left</span>
      <span class="text-slate-500">85% Complete</span>
    </div>
  </div>
</div>
