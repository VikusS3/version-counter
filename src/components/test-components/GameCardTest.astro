---
// CardJuego.astro
import { CounterTest } from "./CounterTest";
const { juego } = Astro.props; // Pasas todo el objeto del JSON
---

<div
  class="group relative overflow-hidden rounded-xl bg-slate-900 p-8 h-96 flex flex-col justify-end transition-all"
>
  <div
    class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-105"
    style={`background-image: linear-gradient(180deg, rgba(10,10,12,0.1) 0%, #0a0a0c 100%), url(${juego?.imagen});`}
  >
  </div>

  <div class="relative z-10">
    <div class="flex items-center gap-2 mb-1">
      <h3
        class="text-3xl font-black italic tracking-tighter text-white uppercase"
      >
        {juego?.nombre}
      </h3>
      <div
        class="size-2 rounded-full bg-green-500 animate-pulse shadow-[0_0_10px_rgba(34,197,94,0.8)]"
      >
      </div>
    </div>

    <CounterTest
      client:load
      fecha_semilla={juego?.fecha_semilla}
      duracion_dias={juego?.duracion_dias}
      mantenimiento_horas={juego?.mantenimiento_horas}
      versiones={juego?.versiones}
    />
  </div>
</div>
